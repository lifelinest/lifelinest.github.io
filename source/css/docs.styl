/* 基础样式 */
:root
  --primary-color: #8a63d2
  --secondary-color: #5e8af7
  --text-primary: #2c3e50
  --text-secondary: #5d6d7c
  --text-contrast: #ffffff
  --glass-bg: rgba(255, 255, 255, 0.92)
  --glass-border: rgba(255, 255, 255, 0.75)
  --glass-shadow: 0 15px 50px rgba(0, 0, 0, 0.12)
  --card-radius: 16px
  --transition: all 0.35s cubic-bezier(0.165, 0.84, 0.44, 1)
  --module-spacing: 3rem
  --blur-intensity: 12px

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: 'Inter', 'PingFang SC', 'Microsoft YaHei', sans-serif
  background: linear-gradient(135deg, #f5f7ff 0%, #eef1f8 100%)
  color: var(--text-primary)
  line-height: 1.6
  min-height: 100vh
  padding: 0
  margin: 0
  overflow-x: hidden

/* 容器样式 */
#docs-page
  max-width: 1400px
  margin: 0 auto
  padding: 2rem 1.5rem

.docs-container
  display: flex
  flex-direction: column
  gap: var(--module-spacing)

/* 头部图像区域 */
.header-image
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)
  height: 220px
  border-radius: var(--card-radius)
  display: flex
  align-items: center
  justify-content: center
  position: relative
  overflow: hidden
  box-shadow: var(--glass-shadow)

  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 L100,0 L100,100 Q50,80 0,100 Z" fill="rgba(255,255,255,0.15)"/></svg>')
    background-size: 100% 100%

.header-content
  position: relative
  z-index: 2
  text-align: center
  padding: 0 1.5rem

.docs-title
  font-size: 2.8rem
  font-weight: 800
  margin-bottom: 1rem
  color: white
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2)

.docs-description
  font-size: 1.3rem
  color: rgba(255, 255, 255, 0.9)
  max-width: 700px
  margin: 0 auto

/* 搜索区域 */
.search-container
  background: var(--glass-bg)
  backdrop-filter: blur(var(--blur-intensity))
  -webkit-backdrop-filter: blur(var(--blur-intensity))
  border: 1px solid var(--glass-border)
  border-radius: var(--card-radius)
  box-shadow: var(--glass-shadow)
  padding: 1.8rem 2rem
  margin-bottom: 1.5rem
  position: relative

.docs-search-container
  width: 100%
  max-width: 900px
  margin: 0 auto
  position: relative

.search-box
  display: flex
  background: white
  border-radius: 50px
  overflow: hidden
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08)
  transition: var(--transition)

  &:hover, &:focus-within
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15)
    transform: translateY(-3px)

.search-box input
  flex: 1
  border: none
  padding: 1.4rem 1.5rem
  font-size: 1.15rem
  font-weight: 500
  color: var(--text-primary)
  background: rgba(255, 255, 255, 0.95)
  transition: var(--transition)

  &::placeholder
    color: #a0a0a0
    transition: all 0.3s

  &:focus
    outline: none
    background: white

    &::placeholder
      opacity: 0.5

.search-btn
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color))
  color: white
  border: none
  padding: 0 2.2rem
  cursor: pointer
  font-weight: 600
  display: flex
  align-items: center
  gap: 0.8rem
  transition: var(--transition)
  font-size: 1.1rem

  &:hover
    filter: brightness(1.08)
    padding: 0 2rem 0 2.4rem

/* 功能模块布局 */
.feature-modules
  margin-top: 1rem

.module-grid
  display: grid
  grid-template-columns: repeat(3, 1fr)
  gap: 2.2rem

/* 整体模块容器 */
.module-container
  display: flex
  flex-direction: column
  height: 100%
  border-radius: var(--card-radius)
  transition: var(--transition)
  overflow: hidden

  &:hover
    transform: translateY(-10px)
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.18)

/* 模块内容区 */
.module-content
  flex: 1
  display: flex
  flex-direction: column
  padding: 2rem
  background: var(--glass-bg)
  backdrop-filter: blur(var(--blur-intensity))
  -webkit-backdrop-filter: blur(var(--blur-intensity))
  position: relative
  border-radius: var(--card-radius)

/* 功能卡片样式 */
.feature-card
  display: flex
  flex-direction: column
  height: 100%
  text-align: center

.card-icon
  width: 85px
  height: 85px
  border-radius: 50%
  margin: 0 auto 1.5rem
  display: flex
  align-items: center
  justify-content: center
  background: linear-gradient(135deg, rgba(138, 99, 210, 0.15), rgba(94, 138, 247, 0.15))

  i
    font-size: 2.5rem
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color))
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text

.card-title
  font-size: 1.7rem
  font-weight: 700
  margin-bottom: 0.5rem

.card-subtitle
  color: var(--secondary-color)
  font-weight: 600
  font-size: 1.1rem
  margin-bottom: 1.5rem
  line-height: 1.5

.section-divider
  width: 100%
  height: 4px
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color))
  border-radius: 2px
  margin: 0 auto 1.8rem

.card-content
  flex: 1
  margin-bottom: 1.5rem
  padding: 0 1.2rem

.feature-list
  list-style: none
  padding: 0
  margin: 0
  text-align: center

  li
    color: var(--text-secondary)
    margin-bottom: 1.1rem
    padding: 0.5rem 0
    position: relative
    font-size: 1.05rem
    line-height: 1.6
    transition: var(--transition)

    &:before
      content: '•'
      color: var(--primary-color)
      font-weight: bold
      display: inline-block
      width: 1em
      margin-left: -1em

    &:hover
      color: var(--primary-color)
      transform: translateX(5px)

.card-footer
  margin-top: auto
  text-align: center
  padding-top: 1.5rem

.action-btn
  display: inline-flex
  align-items: center
  gap: 0.8rem
  padding: 0.8rem 1.8rem
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color))
  color: white
  border-radius: 30px
  text-decoration: none
  font-weight: 600
  font-size: 1.05rem
  transition: var(--transition)
  box-shadow: 0 5px 20px rgba(138, 99, 210, 0.25)

  &:hover
    transform: translateY(-3px)
    box-shadow: 0 8px 25px rgba(138, 99, 210, 0.35)
    gap: 1rem

/* 响应式设计 */
@media (max-width: 1200px)
  .module-grid
    gap: 1.8rem

@media (max-width: 992px)
  .module-grid
    grid-template-columns: 1fr
    max-width: 700px
    margin: 0 auto
    gap: 3rem

  .module-container
    margin-bottom: 1rem

@media (max-width: 768px)
  #docs-page
    padding: 1.5rem

  .docs-title
    font-size: 2.3rem

  .docs-description
    font-size: 1.15rem

  .header-image
    height: 180px

  .search-box input
    padding: 1.2rem 1.5rem
    font-size: 1rem

  .search-btn
    padding: 0 1.5rem

    span
      display: none

  .module-content
    padding: 1.5rem

@media (max-width: 480px)
  .docs-title
    font-size: 2rem

  .docs-description
    font-size: 1.1rem

  .header-image
    height: 160px
    padding: 1.5rem

  .search-box input
    padding: 1.1rem 1.2rem

  .module-content
    padding: 1.2rem

  .card-icon
    width: 75px
    height: 75px

    i
      font-size: 2rem